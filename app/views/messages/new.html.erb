<p id="notice"><%= notice %></p>
<%= form_for @message, url: contact_path do |f| %>
  <h2>APPLICATION DETAILS</h2>
  <h4>Personal Information</h4>

  <div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <%= f.text_field :name, placeholder: "Name", id: "name", class: "validate" %>
          <%= f.label :name %>
        </div>
        <div class="input-field col s6">
          <%= f.email_field :email, placeholder: "Email", id: "email", class: "validate"%>
          <%= f.label :email %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <%= f.text_field :title, placeholder: "Title", id: "title", class: "validate"%>
          <%= f.label :title, "Title" %>
        </div>
        <div class="input-field col s6">
          <%= f.text_field :id, placeholder: "ID Number", id: "id", class: "validate"%>
          <%= f.label :id, "ID Number" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <%= f.text_field :phone, placeholder: "Phone", id: "phone"%>
          <%= f.label :phone, "Phone" %>
        </div>
        <div class="input-field col s6">
          <%= f.text_field :mobile, placeholder: "Mobile", id: "mobile"%>
          <%= f.label :mobile, "Mobile" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <%= f.text_field :marital_status, placeholder: "Marital Status", id: "marital_status"%>
          <%= f.label :marital_status, "Marital Status" %>
        </div>
        <div class="input-field col s6">
          <%= f.email_field :ethnic_group, placeholder: "Ethnic Group", id: "ethnic_group"%>
          <%= f.label :ethnic_group, "Ethnic Group" %>
        </div>
      </div>
    </form>
  </div>

<!--
:address1, placeholder: "Residential Address"%></fieldset>
:suburb, placeholder: "Suburb"%></fieldset>
:postal_code, placeholder: "Postal Code"%></fieldset>
:period_at_address, placeholder: "Period at Address"%></fieldset>
:residential_status, placeholder: "Residential Status"%></fieldset>
:graduate  placeholder: "Graduate?" %>
    -->
  <button class="waves-effect waves-light btn-large">
    <%= f.submit "Send" %>
  </button>

<% end %>