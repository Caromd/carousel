<%= link_to 'New Interior colour', new_admin_interior_colour_path , class: "waves-effect indigo darken-2 btn" %>
<h4>INTERIOR COLOURS</h4>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @interior_colours.each do |interior_colour| %>
      <tr>
        <td><%= interior_colour.name %></td>
        <td><%= link_to 'Edit', edit_admin_interior_colour_path(interior_colour), class: "waves-effect indigo darken-2 btn" %></td>
        <td><%= link_to 'Delete', admin_interior_colour_path(interior_colour), class: "waves-effect indigo darken-2 btn", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

