<div class="container">
<h5>PAINT COLOURS
<%= link_to new_admin_paint_colour_path do %>
  <i class="material-icons">add</i>
<% end %>
</h5>

<table class="bordered highlight">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @paint_colours.each do |paint_colour| %>
      <tr>
        <td><%= paint_colour.name %></td>
        <td><%= link_to edit_admin_paint_colour_path(paint_colour) do %><i class="material-icons">edit</i><% end %></td>
        <td><%= link_to admin_paint_colour_path(paint_colour), method: :delete, data: { confirm: 'Are you sure?' }  do%><i class="material-icons">delete</i><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
