<div class="container">
<h5>PLANS
<%= link_to new_admin_plan_path do %>
  <i class="material-icons">add</i>
<% end %>
</h5>

<table class="bordered highlight">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.name %></td>
        <td><%= link_to edit_admin_plan_path(plan) do %><i class="material-icons">edit</i><% end %></td>
        <td><%= link_to admin_plan_path(plan), method: :delete, data: { confirm: 'Are you sure?' }  do%><i class="material-icons">delete</i><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>