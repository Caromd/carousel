<%= form_for [:admin, @vehicle] do |f| %>
  <% if @vehicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

      <ul>
      <% @vehicle.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h1 class="centralise">MANAGE VEHICLE</h1>
  
  <div class= "col_12 fleft first">
    
    <h3 class="centralise"><strong>Details</strong></h3> 
    
    <fieldset class="push_both_sm">
      <%= f.label :make_id, class: "col_3 first"%>
      <%= f.collection_select :make_id, @makes, :id, :name, {include_blank: true}, {class: "col_8 last"} %>
    </fieldset>
    <fieldset class="push_both_sm">
      <%= f.label :model_id, class: "col_3 first" %>
      <%= f.collection_select :model_id, @models, :id, :name, {include_blank: true}, {class: "col_8 last"} %>
    </fieldset>
    <fieldset class="push_both_sm">
      <%= f.label :derivative, class: "col_3 first" %>
      <%= f.text_field :derivative, class: "col_8 last" %>
    </fieldset>
    <fieldset class="push_both_sm">
      <%= f.label :year, class: "col_3 first" %>
      <%= f.text_field :year, class: "col_8 last" %>
    </fieldset>
    <fieldset class="push_both_sm">
      <%= f.label :stock_number, class: "col_3 first" %>
      <%= f.text_field :stock_number, class: "col_8 last" %>
    </fieldset>
        <fieldset class="push_both_sm">
      <%= f.label :mileage, class: "col_3 first" %>
      <%= f.text_field :mileage, class: "col_8 last" %>
    </fieldset>
    <fieldset class="push_both_sm">
      <%= f.label :price, class: "col_3 first" %>
