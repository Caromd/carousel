    <h3 class="centralise"><strong>Specifications</strong></h3>    
 
    <fieldset class="push_both_sm">
      <%= f.label :vehicle_type, class: "col_3 first" %>
      <%= f.collection_select :vehicle_type, @vehicle_types, :to_s, :to_s, {include_blank: true}, {class: "col_8 last"} %>
    </fieldset>
    <fieldset class="push_both_sm">
      <%= f.label :plan_id, class: "col_3 first" %>
      <%= f.collection_select :plan_id, @plans, :id, :name, {include_blank: true}, {class: "col_8 last"} %>
    </fieldset>
    <fieldset class="push_both_sm">
      <%= f.label :paint_colour_id, class: "col_3 first" %>
      <%= f.collection_select :paint_colour_id, @paint_colours, :id, :name, {include_blank: true}, {class: "col_8 last"} %>
    </fieldset>
    <fieldset class="push_both_sm">
      <%= f.label :interior_colour_id, class: "col_3 first" %>
      <%= f.collection_select :interior_colour_id, @interior_colours, :id, :name, {include_blank: true}, {class: "col_8 last"} %>
    </fieldset>
    <fieldset class="push_both_sm">
      <%= f.label :fuel, class: "col_3 first" %>
      <%= f.collection_select :fuel, @fuels, :to_s, :to_s, {include_blank: true}, {class: "col_8 last"} %>
    </fieldset>
    <fieldset class="push_both_sm">
      <%= f.label :prior_use, "Uses", class: "col_3 first" %>
      <%= f.collection_select :prior_use, @uses, :to_s, :to_s, {include_blank: true}, {class: "col_8 last"} %>
    </fieldset>
    <fieldset class="push_both_sm">
      <%= f.label :drive, class: "col_3 first" %>
      <%= f.collection_select :drive, @drives, :to_s, :to_s, {include_blank: true}, {class: "col_8 last"} %>
    </fieldset>
    <fieldset class="push_both_sm">
      <%= f.label :transmission, class: "col_3 first" %>
      <%= f.collection_select :transmission, @transmissions, :to_s, :to_s, {include_blank: true}, {class: "col_8 last"} %>
    </fieldset>
    <fieldset class="push_both_sm">
      <%= f.label :displacement, class: "col_3 first" %>
      <%= f.text_field :displacement, class: "col_8 last" %>
    </fieldset>

  </div>
  <div class="col_9 fright last">
    
    <h3 class="centralise"><strong>Features</strong></h3>
    
    <fieldset class="push_both_sm">
      <%= f.label :full_service_history, class: "col_5 first " %>
      <%= f.check_box :full_service_history %>
    </fieldset>
    <fieldset class="push_both_sm">
      <%= f.label :one_owner, class: "col_5 first " %>
      <%= f.check_box :one_owner %>
    </fieldset>
    <fieldset class="push_both_sm">
